<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    tools:context=".ui.myticket.MyticketFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:scrollbarTrackVertical="@drawable/vertical_scrollview_track">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="vertical">
                <ImageView

                    android:id="@+id/imageView59"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#212121"/>

                <ImageView

                    android:id="@+id/imageView39"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="@drawable/border2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:background="#ffffff">
                    <!-- TODO -->
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#EB212121"
            android:gravity="center"
            android:weightSum="2">

            <ToggleButton
                android:id="@+id/button4"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_button_selector"
                android:checked="true"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:textColor="@drawable/custom_butteontext_selector"
                android:textOff="ACTIVE"
                android:textOn="ACTIVE"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/button5"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_selector"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:textColor="@drawable/custom_butteontext_selector"
                android:textOff="EXPIRED"
                android:textOn="EXPIRED"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

