<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    tools:context=".ui.myticket.MyticketFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:scrollbarTrackVertical="@drawable/vertical_scrollview_track">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView59"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#212121" />

                <ImageView

                    android:id="@+id/imageView39"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="@drawable/border2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:background="#ffffff"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/validTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Valid to 2/26/18 10:08"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Zone TROMSO - Zone Vikran"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_marginEnd="20dp"
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"                            >

                            <pl.droidsonroids.gif.GifImageView
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:src="@drawable/gifload2"/>





                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="end|center_vertical"
                            android:layout_marginEnd="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_condensed_bold"
                                android:text="02:14:57"
                                android:textAlignment="center"
                                android:textColor="#8BAF3F"
                                android:textSize="27sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <View android:id="@+id/tile_divider"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                         />

                    <View android:id="@+id/tile_divider2"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="#000000"
                        />
                    <View android:id="@+id/tile_divider3"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        />



                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#EB212121"
            android:gravity="center"
            android:weightSum="2">

            <ToggleButton
                android:id="@+id/button4"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_button_selector"
                android:checked="true"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:textColor="@drawable/custom_butteontext_selector"
                android:textOff="ACTIVE"
                android:textOn="ACTIVE"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/button5"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_selector"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:textColor="@drawable/custom_butteontext_selector"
                android:textOff="EXPIRED"
                android:textOn="EXPIRED"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

